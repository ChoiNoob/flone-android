<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FlyActivity">

    <LinearLayout
        android:id="@+id/l_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_connect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/action_connect" />

        <Button
            android:id="@+id/bt_disconnect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/action_disconnect" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="@dimen/gapLarge"
            android:textSize="@dimen/textSizeLarge"
            android:id="@+id/tv_phone_sensors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="@dimen/gapLarge"
            android:textSize="@dimen/textSizeLarge"
            android:id="@+id/tv_drone_sensors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <RelativeLayout
        android:background="#22FF0000"
        android:layout_alignParentBottom="true"
        android:id="@+id/rl_throttle"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/gapMedium"
        android:layout_height="200dp">

        <TextView
            android:layout_margin="@dimen/gapMedium"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_height="wrap_content"
            android:text="@string/trottle_full" />

        <TextView
            android:layout_margin="@dimen/gapMedium"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            android:text="@string/trottle_stop" />
    </RelativeLayout>
</RelativeLayout>
